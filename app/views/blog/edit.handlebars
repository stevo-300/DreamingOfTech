<div class="container">
  <div class="row">
    <h1 class="text-center">Edit {{post.title}}</h1>
    <div class="camp">
      <form action="/campgrounds" method="post">

        <div class="form-group">
          <input class="form-control" type="text" name="blog[image]" value="{{post.image}}">
        </div>
        <div class="form-group">
          <textarea name="blog[body]" cols="30" rows="10" id="postArea">{{post.post}}</textarea>
        </div>
        <div class="form-group">
          <input class="btn btn-lg btn-primary btn-block" type="submit" value="Submit">
        </div>

      </form>
      <a href="/blog">Go Back</a>
    </div>



  </div>




</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/simplemde/1.11.2/simplemde.min.js"></script>
<script>
  var simplemde = new SimpleMDE({ element: document.getElementById("postArea") });
</script>